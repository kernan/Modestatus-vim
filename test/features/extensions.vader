Before (Enable core extension):
  call modestatus#extensions#enable('core')

Execute (Ensure the core extension was enabled):
  Assert exists("*modestatus#extensions#core#init")

Before (Enable loclist extension):
  call modestatus#extensions#enable('loclist')

Execute (Ensure the loclist extension was enabled):
  Assert exists("*modestatus#extensions#loclist#init")

Before (Enable all extensions):
  call modestatus#extensions#enable_all()

Execute (Ensure all extensions were automatically enabled):
  Assert exists("*modestatus#extensions#core#init")
  Assert exists("*modestatus#extensions#loclist#init")
